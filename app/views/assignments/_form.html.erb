<%= form_for([@person, @assignment]) do |f| %>

  <div class="form-group">
    <%= f.label :location_id %>
    <%= f.collection_select :location_id, Location.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :role %>
    <%= f.text_field :role, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>

<% end %>
